generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String  @unique
  password String
  level String @default("user")
  classPlans ClassPlan[]
}

model ClassPlan {
  id           String   @id @default(uuid())
  title        String
  goals        String
  observations String
  createdAt    DateTime @default(now())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
}
